doctype html
html(leng="en")
  include ../layouts/head.pug
  include ../layouts/navbar.pug
  +head("The amazing blog")
  br
  body
    each post in posts
      div(class="d-flex justify-content-center")
        div(class="card" style="width: 20rem;")
          div(class="card-body")
            h5(class="card-title")=post.title
            p(class="card-text")=post.content
            a(href=`/view/posts/update/${post.postId}`) Edit post
            br
            a(data-method="delete", href=`/view/posts/delete/${post.postId}`
            onclick="return confirm('Are you sure you want to delete this post?');") Delete post
      br
    div(class="d-flex justify-content-center")
      button.btn.btn-primary(class="d-flex justify-content-center" type='button'
      onclick="location.href='/view/posts/new-post'") New Post

