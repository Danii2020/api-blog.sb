doctype html
html(leng="en")
  include ../layouts/head.pug
  include ../layouts/navbar.pug
  +head("The amazing blog")
  body
    br
    div(class="pt-4")
      .modal-dialog(class="py-3")
        .modal-content(class="py-3")
          .modal-header
            h4#myModalLabel.modal-title
              | Signup to "The Amazing Blog"
          .modal-body(class="py-3")
            form(role='form' method='POST' action='/view/auth/signup')
              div.form-group(class="py-2")
                label(for='firstname' class="py-2") Firstname:
                input#firstname.form-control(type='text', placeholder='firstname' name='firstname' pattern="[A-Z-a-z]{3,}" title="Your normal name" required)
              div.form-group(class="py-2")
                label(for='lastname' class="py-2") Lastname:
                input#lastname.form-control(type='text', placeholder='lastname' name='lastname' pattern="[A-Z-a-z]{3,}" title="Your normal name" required)
              div.form-group(class="py-2")
                label(for='username' class="py-2") Username:
                input#username.form-control(type='text', placeholder='username' name='username' required)
              div.form-group(class="py-2")
                label(for='email' class="py-2") Email:
                input#email.form-control(type='email', placeholder='example@example.com' name='email' required)
              div.form-group(class="py-2")
                label(for='password' class="py-2") Password:
                input#password.form-control(type='password', placeholder='password' name='password' minlength="6" title="Six characters minimum" required)
              div.form-group(class="py-2")
                button.btn.btn-primary(type="submit") Submit
