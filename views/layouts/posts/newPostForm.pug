mixin form(action)
  div(class="pt-4")
    .modal-dialog(class="py-3")
      .modal-content(class="py-3")
        .modal-header
          h4#myModalLabel.modal-title
            | Create a new post
        .modal-body(class="py-3")
          form(role='form' method='POST' action=action)
            div.form-group(class="py-2")
              label(for='title' class="py-2") Title:
              input#content.form-control(type='text', placeholder="Post's title" name='title', required)
            div.form-group(class="py-2")
              label(for='content' class="py-2") Content:
              textarea#content.form-control(rows="4" cols="50" placeholder="Post's content" name='content', required)
            div.form-group(class="py-2")
              button.btn.btn-primary(type="submit") Submit
