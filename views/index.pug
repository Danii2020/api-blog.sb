doctype html
html(leng="en")
  include layouts/head.pug
  include layouts/navbar.pug
  +head("The amazing blog")
  body
    br
    h1(class="text-center py-5") Welcome to the amazing blog
    br
    if posts.length === 0
      p(id="description" class="text-center ") The are not posts yet
    each post in posts
      div(class="d-flex justify-content-center")
        div(class="card" style="width: 20rem;")
          div(class="card-body")
            h5(class="card-title")=post.title
            p(class="card-text")=post.content
            a(href=`/view/users/${post.user.userId}`)=post.user.username
      br
